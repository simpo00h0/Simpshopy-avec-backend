# Supabase (obligatoire pour l'auth)
# Récupérez ces valeurs dans : Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://votre-projet.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=votre-anon-key

# API Backend (optionnel, défaut: http://localhost:3000/api/v1)
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Storefront
NEXT_PUBLIC_STOREFRONT_URL=http://localhost:3002
# Domaine en prod pour sous-domaines (ex: simpshopy.com)
NEXT_PUBLIC_STOREFRONT_DOMAIN=localhost:3002
# Secret partagé pour invalidation du cache storefront (optionnel en dev)
NEXT_PUBLIC_REVALIDATE_SECRET=
